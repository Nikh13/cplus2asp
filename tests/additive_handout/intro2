:- macros
	N -> 3;
	K -> 2.

:- sorts
	nums;
	people.

:- objects
	0..N :: nums;
	1..K :: people.

:- constants
	Has(people) :: simpleFluent(nums);
	Buy(people) :: action;
	Available :: additiveFluent(nums).

:- variables
	x :: people;
	k :: nums.

inertial Has(x).
exogenous Buy(x).
Buy(x) causes Has(x)=k+1 if Has(x)=k.
nonexecutable Buy(x) if Has(x)=N.
Buy(x) increments Available by -1.
