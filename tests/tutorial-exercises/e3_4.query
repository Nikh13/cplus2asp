
:- include 'shooting3.cplus'.

:- macros
	n -> 5.

:- objects
	gun(0..n) :: guns;
	buffalo, deer, fox :: animals.


% Exercise 3.4
% Initially the guns are loaded but not aimed. Find a plan to kill all animals (with 5 guns).
% Command: cplus2asp e3_4.query -q 0
:- query
	label :: 0;
	0: alive(A);
	0: loaded(G), target(G)=none;
	maxstep: -alive(A).

