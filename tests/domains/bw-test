% File: 'bw-test'

%:- include 'bw'.

:- objects
  a,b,c,d                    :: block.

:- query

% Find a 2-step plan:
%
% initial condition       goal
%
%    a   c                b   d
%    b   d                a   c
%  ---------            ---------

 maxstep :: 2;

 0: loc(a)=b, loc(b)=table, loc(c)=d, loc(d)=table;
 maxstep: loc(a)=table, loc(b)=a, loc(c)=table, loc(d)=c.


