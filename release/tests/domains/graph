% File 'graph': Description of the graph

%                                _________________________
%                                |                       |
%                                v         		 |
%       -4 -> -3 -> -2 -> -1 ->  0 ->  1 ->  2 ->  3 ->  4
%       ^                        |
%       |________________________|
%
% To find the edges of the graph, type
%
% | ?- loadf 'graph'.
%
% and then
%
% | ?- sat.
%
% See Section B.6 of the tutorial for discussion.

:- macros
  n -> 4.

:- sorts
  node.

:- objects
  -n..n    :: node.

:- constants
  edge(node,node)       :: boolean.

:- variables
  X,Y                   :: node.

edge(X,X+1) where X<n.
edge(n,0).
edge(0,-n).

default -edge(X,Y).
